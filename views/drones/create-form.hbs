<h2>Create a new drone</h2>
<div class="row">
    <div class="col-12">
        <form action="/drones/create" method="POST"></form>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required />
        <label for="propellers">Number of propellers:</label>
        <input type="number" id="propellers" name="propellers" />
        <label for="maxSpeed">MaxSpeed</label>
        <input type="number" id="maxSpeed" name="maxSpeed" />
        <button>Create a drone</button>
        </form>
    </div>
</div>